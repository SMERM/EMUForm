<!-- app/views/roles/select.html.erb -->
<p id="notice"><%= notice %></p>

<h1>Select Roles for the following authors:</h1>

<%= form_for(:work_role_author, url: work_roles_authors_path(@work)) do |f| %>
  <%= render partial: 'select_role', collection: @authors, locals: { form: f, roles: @roles } %>
  <%= f.button('Submit selection of roles') %>
<% end %>

<br />

<%= link_to 'Back', select_work_authors_path(@work) %>

