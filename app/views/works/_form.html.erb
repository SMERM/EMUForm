    <%= f.label :year %><br>
    <%= f.date_select :year, :start_year=>2016, :end_year=>1900, :discard_day=>true, :discard_month=>true %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.time_select :duration, :include_seconds=>true %>
  </div>
  <div class="field">
    <%= f.label :instruments %><br>
    <%= f.text_field :instruments %>
  </div>
  <div class="field">
    <%= f.label :program_notes_en %><br>
    <%= f.text_area :program_notes_en %>
  </div>
  <div class="field">
    <%= f.label :program_notes_it %><br>
    <%= f.text_area :program_notes_it %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
