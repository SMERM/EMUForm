<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @work.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @work.display_year %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @work.display_duration %>
</p>

<p>
  <strong>Instruments:</strong>
  <%= @work.instruments %>
</p>

<p>
  <strong>Roles:</strong>
  (<%= @work.display_roles(@author) %>)
</p>

<p>
  <strong>Program Notes [ENG]:</strong>
  <%= @work.program_notes_en %>
</p>

<p>
  <strong>Program Notes [IT]:</strong>
  <%= @work.program_notes_it %>
</p>

<p>
  <strong>Submitted Files:</strong>
  <ul>
  <% @work.submitted_files.each do |sf| %>
    <li><%= sf.filename %>  <%= sf.size %></li>
  <% end %>
  </ul>
</p> 

<%= link_to 'Edit', edit_author_work_path(:author_id => @author.to_param, :id => @work.to_param) %> |
