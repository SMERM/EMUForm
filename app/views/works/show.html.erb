<p class="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @work.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @work.display_year %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @work.display_duration %>
</p>

<p>
  <strong>Instruments:</strong>
  <%= @work.instruments %>
</p>

<p>
  <strong><%= pluralize(@work.authors.uniq.count, "author") %>:</strong>
  <table class="table" id="authors">
    <thead>
      <th>Name</th>
      <th>Year</th>
      <th>Roles</th>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <%= render partial: 'authors/author_item', collection: @work.authors.uniq %>
    </tbody>
  </table
</p>

<p>
  <strong>Program Notes [ENG]:</strong>
  <%= @work.program_notes_en %>
</p>

<p>
  <strong>Program Notes [IT]:</strong>
  <%= @work.program_notes_it %>
</p>

<p>
  <strong>Submitted Files:</strong>
  <ul>
  <% @work.submitted_files.each do |sf| %>
    <li><%= sf.filename %>  <%= sf.size %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_work_path(@work) %> |
<%= link_to 'Back', works_path %>

<br>
