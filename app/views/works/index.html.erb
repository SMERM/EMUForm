<p class="notice"><%= notice %></p>

<header class="entry-header">
  <h1 class="entry-title">List of Works</h1>
</header>

<div class="entry-content">

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Instruments</th>
      <th>Roles<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'index_table', collection: @author.works.uniq %>
  </tbody>
</table>

  <br>

  <%= link_to 'New Work', new_author_work_path(@author) %>
  <%= link_to 'Back', author_path(@author) %>

</div>
